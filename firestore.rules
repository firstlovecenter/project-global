rules_version = '2'
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if request.auth != null;
    }

    match /members/{memberId} {
      allow update: if request.auth.uid == memberId && request.resource.data.keys().hasOnly(['text', 'status']);
    }

