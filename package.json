{
  "name": "project-global",
  "private": true,
  "version": "0.0.16",
  "author": {
    "name": "John-Dag Addy",
    "email": "johndagaddy@firstlovecenter.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/firstlovecenter/project-global.git"
  },
  "scripts": {
    "dev": "node scripts/start-dev.js",
    "build": "tsc && doppler run vite build",
    "build:watch": "tsc --watch",
    "deploy-dev": "npm run build && firebase deploy --project project-global-aa5ea",
    "deploy-prod": "npm run build && firebase deploy --project project-global-prod",
    "serve": "CLOUD_RUNTIME_CONFIG=\"$(doppler secrets download --no-file | jq '{doppler: .}')\" firebase emulators:start",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky install",
    "gen": "standard-version --release-as patch ",
    "release:major": "node scripts/release.js major",
    "release:minor": "node scripts/release.js minor",
    "release:patch": "node scripts/release.js patch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.2.1",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@fontsource/bai-jamjuree": "^5.0.8",
    "@hookform/resolvers": "^3.3.1",
    "@jaedag/admin-portal-react-core": "^2.2.11",
    "@vitejs/plugin-react": "^3.1.0",
    "execa": "^4.0.2",
    "firebase": "^9.21.0",
    "firebaseui": "^6.0.2",
    "framer-motion": "^10.12.16",
    "react": "^18.2.0",
    "react-autosuggest": "^10.1.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.2",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.3.0",
    "react-spinners": "^0.13.8",
    "reactfire": "^4.2.3",
    "web-vitals": "^0.2.4",
    "yup": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.8.1",
    "@jaedag/admin-portal-types": "^1.0.31",
    "@types/node": "^20.1.0",
    "@types/react": "^18.0.28",
    "@types/react-autosuggest": "^10.1.9",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "firebase-tools": "^12.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-eslint-cli": "^7.1.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vite-plugin-svgr": "^2.4.0",
    "vite-tsconfig-paths": "^4.0.7"
  }
}
